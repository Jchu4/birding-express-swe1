<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('head-links') -%>
    <title>Home</title>
  </head>
  <body>
    <%- include('navbar') -%>
    <div class="container">

      <div class="row pt-4">
        <div class="col-7">
          <h1><%=behaviourArr[0].name%></h1>
          <h5 class="lead text-muted pb-4 font-italic">
           Test
          </h5>
        </div> 
      </div>  

      <div class="row">
        <!-- Start of Notes List -->
        <% behaviourArr.forEach((behaviour, index) => { %>
          <div class="col">
            <div class="card border-dark mb-3" style="max-width: 18rem">
              <div class="card-header">
                <div class="row">
                  <div class="col-9">
                    <%= behaviour.name %> Note #
                  </div> 
                  <div class="col-3 ml-auto text-right">
                    <a href="">
                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16"><path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"/>
                      <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/></svg>
                    </a>
                  </div>
                </div> 
              </div>
              <div class="card-body text-dark" style="height: 11rem">
                <h5 class="card-title">Test</h5>
                <p id="card-text-overflow" class="card-text">
                  Test
                </p>
              </div>
            </div>
          </div>
            <% }) %>
            <!-- End of Notes List -->
      </div>
    </div>

    <%- include('bootstrap-scripts') -%>
  </body>
</html>
