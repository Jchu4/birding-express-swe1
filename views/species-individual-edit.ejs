<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('head-links') -%>
    <title>Home</title>
  </head>
  <body>
    <%- include('navbar') -%>
    <div class="container">

      <div class="row pt-4">
          <!-- Start of Put Form --> 
        <div class="col-7">        
            <form method="POST" action="/species/<%=notesArr[0].species_id%>/edit?_method=PUT">
              <h1><input class="text-primary" name="commonName" type="text" value="<%= notesArr[0].name %>"></h1>
              <h5><input class="lead text-primary pb-4 font-italic" name="scienceName" type="text" value="<%= notesArr[0].scientific_name %>"></h5>
        </div> 

          <!-- Either finish edit or delete species -->
          <div class="col-4 d-flex align-items-center">
            <!-- Edit Complete Icon -->
            <button type="submit" class="btn px-2" href="/species/<%= notesArr[0].species_id %>/edit">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="limegreen" class="bi bi-check2-square" viewBox="0 0 16 16">
              <path d="M3 14.5A1.5 1.5 0 0 1 1.5 13V3A1.5 1.5 0 0 1 3 1.5h8a.5.5 0 0 1 0 1H3a.5.5 0 0 0-.5.5v10a.5.5 0 0 0 .5.5h10a.5.5 0 0 0 .5-.5V8a.5.5 0 0 1 1 0v5a1.5 1.5 0 0 1-1.5 1.5H3z"/>
              <path d="M8.354 10.354l7-7a.5.5 0 0 0-.708-.708L8 9.293 5.354 6.646a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0z"/>
              </svg>
              </button> 
            </form>
            <!-- End of Put Form --> 
            <!-- Start of Delete Form -->
            <form method="POST" action="/species/<%= notesArr[0].species_id %>/edit?_method=DELETE">  
              <!-- Delete Icon -->
              <button type="submit" class="btn px-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="tomato" class="bi bi-trash" viewBox="0 0 16 16">
                  <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                  <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                </svg>
              </button>
            </form> 
            <!-- End of Delete Form --> 
        </div>
     
      </div>  

      <div class="row">
        <!-- Start of Notes List -->
        <% notesArr.forEach((note, index) => { %>
          <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="card border-dark mb-3" style="max-width: 18rem">
              <div class="card-header">
                <div class="row">
                  <div class="col blur-text ">
                    <%= notesArr[0].name %> Sighting #<%= index + 1 %>
                  </div> 
                </div> 
              </div>
              <div class="card-body text-dark" style="height: 11rem">
                <h5 class="card-title blur-text"><%= note.habitat %></h5>
                <p id="card-text-overflow" class="card-text blur-text">
                  <%= note.behaviour %>
                </p>
              </div>
            </div>
          </div>
            <% }) %>
            <!-- End of Notes List -->
      </div>
    </div>

    <%- include('bootstrap-scripts') -%>
  </body>
</html>
