<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('head-links') -%>
    <title>Sign Up</title>
  </head>
  <body>
    <%- include('navbar') -%>

    <div class="container w-75">
      <div class="row">
        <div class="col">
          <h1 class="pt-4">Sign up</h1>
          <h3 class="pb-4 lead text-muted">Welcome aboard</h3>
          <!-- Start of Sign Up Form -->
          <form method="POST" action="/signup">
            <!-- Name -->
            <div class="form-group whole-input">
              <label for="name">Name</label>
              <input
                type="text"
                class="form-control shadow-none"
                id="name"
                name="name"
                placeholder="Name"
              />
            </div>

            <!-- Email -->
            <div class="form-group whole-input">
              <label for="email">Email</label>
              <input
                type="email"
                class="form-control shadow-none"
                id="email"
                name="email"
                placeholder="Email Address"
              />
            </div>

            <!-- Password -->
            <div class="form-group whole-input">
              <label for="password">Password</label>
              <input
                type="password"
                class="form-control shadow-none"
                id="password"
                name="password"
                placeholder="*******"
              />
            </div>

            <!-- Checkbox -->
            <div class="form-group mb-4">
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  id="gridCheck"
                />
                <label class="form-check-labe =" for="gridCheck">
                  I have read the Terms of Use & Privacy Policy.
                </label>
              </div>
            </div>

            <!-- Sign up button -->
            <button type="submit" class="pt-2 btn btn-block btn-dark">
              Sign Up
            </button>
          </form>
          <!-- End of Sign Up Form -->
        </div>
      </div>
      <div class="row py-3">
        <div class="col">
          <p class="text-muted text-center font-weight-light">
            Already a member?
            <a class="text-muted" href="/login"><u>Log in</u></a>
          </p>
        </div>
      </div>
    </div>
    <%- include('bootstrap-scripts') -%>
  </body>
</html>
