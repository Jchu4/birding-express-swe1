<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('head-links') -%>
    <title>Home</title>
  </head>
  <body>
    <%- include('navbar') -%>
    <div class="container">

      <div class="row pt-4">
        <div class="col-7">
          <h1><%= notesArr[0].name %></h1>
          <h5 class="lead text-muted pb-4 font-italic">
           <%= notesArr[0].scientific_name %>
          </h5>
        </div> 

        <!-- Lead to /species/:index/edit -->
        <div class="col-5 d-flex align-items-center">
          <a href="/species/<%= notesArr[0].species_id %>/edit">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
            </svg>
          </a>  
        </div> 
      </div>  

      <div class="row">
        <!-- Start of Notes List -->
        <% notesArr.forEach((note, index) => { %>
          <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="card border-dark mb-3" style="max-width: 18rem">
              <div class="card-header">
                <div class="row">
                  <div class="col-9">
                    <%= notesArr[0].name %> Sighting #<%= index + 1 %>
                  </div> 
                  <div class="col-3 ml-auto text-right">
                    <a href="/note/<%= note.notes_id %>">
                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16"><path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"/>
                      <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/></svg>
                    </a>
                  </div>
                </div> 
              </div>
              <div class="card-body text-dark" style="height: 11rem">
                <h5 class="card-title"><%= note.habitat %></h5>
                <p id="card-text-overflow" class="card-text">
                  <%= note.behaviour %>
                </p>
              </div>
            </div>
          </div>
            <% }) %>
            <!-- End of Notes List -->
      </div>
    </div>

    <%- include('bootstrap-scripts') -%>
  </body>
</html>
